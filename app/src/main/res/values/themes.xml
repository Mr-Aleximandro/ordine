<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--<style name="Theme.Ordine" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.Ordine" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/principal</item>
        <item name="colorPrimaryVariant">@color/fondo2</item>
        <item name="colorOnPrimary">@color/fondo1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/fondo2</item>
    </style>

    <!-- Style pantalla de carga-->
    <style name="PantallaDeCarga" parent="Theme.Ordine">
        <item name="android:windowBackground">@drawable/pantalla_de_carga</item>
    </style>
    <!--Style EditText-->
    <style name="EditTextCustomContent" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorControlNormal">@color/principal</item>
        <item name="colorControlActivated">@color/principal</item>
    </style>
    <style name="EditTextCustomLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/principal</item>
    </style>
    <!--Style Progress bar-->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/principal</item>
        <item name="colorControlNormal">@color/principal</item>
        <item name="colorControlActivated">@color/principal</item>
    </style>
    <!--Style DatePicker-->
    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorAccent">@color/fondo1</item>
        <item name="android:background">@color/principal</item>
        <item name="android:textColor">@color/texto</item>
        <item name="colorControlActivated">@color/fondo1</item>
        <item name="android:selectableItemBackgroundBorderless">@color/principal</item>
        <item name="colorControlHighlight">@color/fondo1</item>
    </style>
    <!--Style SexPicker-->
    <style name="SexPicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/principal</item>
        <item name="colorControlActivated">@color/fondo1</item>
        <item name="android:textColor">@color/texto</item>
    </style>
</resources>